@model Dominio.EntidadesNegocio.Usuario

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - CoronApp</title>
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    </head>
    <body>
        <div id="contenedorLogin">
            <form method="post" autocomplete="off">
                <div id="cajaLogin">
                    <img src="~/Content/img/logo.jpeg" alt="Logo CoronApp" />
                    
                    <input class="inputRegistroLogin" type="text" name="documento" placeholder="Documento" required>
                    @ViewBag.mensaje
                    
                    <input class="inputRegistroLogin" type="password" name="password" placeholder="Contraseña" required>
                    
                    <input type="submit" id="login" value="Login">

                    <div className="register-link m-t-15 text-center">
                        <p>No tienes una cuenta ? <a href="/Usuario/Registro">Regístrate aquí</a></p>
                    </div>
                </div>

            </form>
            <footer>
                <div class="left">
                    <span> Sitio CoronApp </span>
                </div>
                <div class="circulo">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </footer>
        </div>
    </body>
</html>